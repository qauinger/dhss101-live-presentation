<div style="font-size: 60px;">
    <form action="/backward" method="post">
        <button type="submit" style="font-size: 60px;" <%- slide > 0 ? '' : 'disabled' %>>-</button>
    </form>
    <span><%= slide %></span>
    <form action="/forward" method="post">
        <button type="submit" style="font-size: 60px;" <%- slide < max_slide ? '' : 'disabled' %>>+</button>
    </form>
</div>
